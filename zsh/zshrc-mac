eval 
            fuck () {
                TF_PREVIOUS=$(fc -ln -1 | tail -n 1);
                TF_CMD=$(
                    TF_ALIAS=fuck
                    TF_SHELL_ALIASES=$(alias)
                    PYTHONIOENCODING=utf-8
                    thefuck $TF_PREVIOUS THEFUCK_ARGUMENT_PLACEHOLDER $*
                ) && eval $TF_CMD;
                test -n "$TF_CMD" && print -s $TF_CMD
            }
        
